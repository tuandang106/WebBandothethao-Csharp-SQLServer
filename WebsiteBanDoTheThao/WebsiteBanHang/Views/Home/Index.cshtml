@model WebsiteBanHang.Models.HomeModel
    @{
        ViewBag.Title = "Home Page";
    }

    <div class="container">
        <!-- ========================= SECTION MAIN  ========================= -->
        <section class="section-main padding-y">
            <main class="card">
                <div class="card-body background-color-main">
                    <div class="row">
                       
                        <div class="col-md-10">
                            <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                            <div id="carousel1_indicator" class="slider-home-banner carousel slide " data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                    <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                    <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                                </ol>
                                <div class="carousel-inner h-100">

                                    @*THAY DOI ANH BANNER aka SLIDER || change "slider1.jpg"*@
                                    <div class="carousel-item active">
                                        <img src="~/Content/images/banners/banner1.jpg" alt="First slide">
                                    </div>
                                    @*THAY DOI ANH BANNER aka SLIDER || change "slider2.jpg"*@
                                    <div class="carousel-item">
                                        <img src="~/Content/images/banners/banner2.jpg" alt="Second slide">
                                    </div>
                                    @*THAY DOI ANH BANNER aka SLIDER || change "slider3.jpg"*@
                                    <div class="carousel-item">
                                        <img src="~/Content/images/banners/banner3.jpg" alt="Third slide">
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->
                        </div> <!-- col.// -->
                        <div class="col-md-2">
                            <aside class="special-home-right">
                                <h6 class="bg-gradient-green text-center text-white mb-0 p-2">Danh mục</h6>
                                @foreach (var item in Model.ListCategory.Where(n=>n.ShowOnHomePage == true).Take(3))
                                {
                                    <div class="card-banner border-bottom">
                                        <div class="py-3" style="width:80%">
                                            <h6 class="card-title">@item.Name</h6>
                                            <a href="@Url.Action("ProductCategory","Category",new { Id = item.Id})" class="btn btn-secondary btn-sm bg-cyan">Mua</a>
                                        </div>
                                        <img src="~/Content/images/items/@item.Avatar" height="100" class="img-bg">
                                    </div>
                                }


                            </aside>
                        </div> <!-- col.// -->
                    </div> <!-- row.// -->
                </div> <!-- card-body.// -->
            </main> <!-- card.// -->
        </section>
        <!-- ========================= SECTION MAIN END// ========================= -->
        <!-- =============== SECTION DEAL =============== -->
        <section class="padding-bottom">
            <div class="card card-deal">
                <div class="col-heading content-body">
                    <header class="section-heading">
                        <h1 class="section-title text-danger" >ƯU ĐÃI SỐC!!!</h1>
                        <h5 class="section-title text-warning">Giảm giá đến 50%!</h5>
                        </header>
                </div> <!-- col.// -->
                <div class="row no-gutters items-wrap">
                    @foreach (var item in Model.ListProduct.Where(n=>n.TypeId == 1).Take(4))
                    {
                        <div class="col-md col-6">
                            <figure class="card-product-grid card-sm">
                                <a href="@Url.Action("Detail","Product",new { Id = item.Id})" class="img-wrap">
                                    <img src="~/Content/images/items/@item.Avatar">
                                </a>
                                <div class="text-wrap p-3">
                                    @*<a href="#" class="title">@item.Name</a>*@
                                    @Html.ActionLink(item.Name, "Detail", "Product", new { Id = item.Id }, null)
                                    <span class="badge badge-danger"> -50 % </span>
                                </div>
                            </figure>
                        </div> <!-- col.// -->

                    }

                </div>
            </div>
        </section>
        <!-- =============== SECTION DEAL // END =============== -->
      
       
        <!-- =============== SECTION ITEMS =============== -->
        <section class="padding-bottom-sm">
            <header class="section-heading heading-line">
                <h4 class="title-section text-uppercase">Sản phẩm đề xuất </h4>
            </header>
            <div class="row row-sm">
                @foreach (var item in Model.ListProduct.Where(n=>n.TypeId == 2))
                {
                    <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                        <div href="#" class="card card-sm card-product-grid">
                            <a href="@Url.Action("Detail","Product",new { Id = item.Id})" class="img-wrap"> <img src="~/Content/images/items/@item.Avatar"> </a>
                            <figcaption class="info-wrap">
                                @Html.ActionLink(item.Name, "Detail", "Product", new { Id = item.Id }, null)
                                <div class="price mt-1">@item.Price<span>VND</span></div> <!-- price-wrap.// -->
                            </figcaption>
                        </div>
                    </div> <!-- col.// -->
                }
               

            </div> <!-- row.// -->
        </section>
        <!-- =============== SECTION ITEMS .//END =============== -->
        
    </div>
    <!-- container end.// --> 